 <!DOCTYPE html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8" />
    <meta
      name="viewport"
      content="width=device-width, initial-scale=1, shrink-to-fit=no"
    />
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="/css/bootstrap.min.css" />
    <link rel="stylesheet" href="/css/style.css" />
    <link rel="stylesheet" href="/css/uicons-regular-straight.css" />
    <title>::Forget Password::</title>
  </head>

  <body>
    <%- include('./partials/toasts.ejs') %>
    <div class="login">
      <div class="row">
        <div class="col-lg-7 login-left-main">
          <div class="login-left">
            <img src="/images/login.svg" alt="img" />
          </div>
        </div>
        <div class="col-lg-5 login-right-main">
          <div class="login-right">
            <div class="logo-login">
              <a href="javascript:void(0)">
                <!-- <img src="/images/logo.png" alt="img" /> -->
              </a>
            </div>
            <h3>Forgot Password? ðŸ”’</h3>
            <p>
              Enter your email and we'll send you instructions to reset your
              password
            </p>
            <% if(data?.success){ %>
            <p style="color: green"><%=data?.message%></p>
            <%}else if(!data?.sucess) {%>
            <p style="color: red"><%=data?.message %></p>
            <% } %>
            <div class="custom-form-section">
              <form class="form">
                <div class="form-group">
                  <label for="email">Email address</label>
                  <input
                    type="email"
                    name="email"
                    id="email"
                    class="form-control"
                    placeholder="john@example.com"
                  />
                </div>
                <button id="submitbutton" class="btn btn-primary">
                  Send Reset Link
                </button>
              </form>
            </div>
            <a href="/login" class="back-login">
              <i class="fi fi-rs-angle-left"></i> Back to login
            </a>
          </div>
        </div>
      </div>
    </div>
    <!-- Option 1: jQuery and Bootstrap Bundle (includes Popper) -->
    <script
      src="https://code.jquery.com/jquery-3.7.0.js"
      integrity="sha256-JlqSTELeR4TLqP0OG9dxM7yDPqX1ox/HfgiSLBj8+kM="
      crossorigin="anonymous"
    ></script>

    <script src="/script/index.js"></script>

    <script>
      $(".toggle-password").click(function () {
        $(this).toggleClass("crossed-eye");
        var input = $($(this).attr("toggle"));
        if (input.attr("type") == "password") {
          input.attr("type", "text");
        } else {
          input.attr("type", "password");
        }
      });
      $("#submitbutton").click((e) => {
        e.preventDefault();
        const data = {
          email: $("input[name='email']").val(),
        };
        $.ajax({
          method: "POST",
          url: "/forget-password",
          contentType: "application/json",
          data: JSON.stringify(data),
          success: (response) => {
            toastNotification("success", response.message);
          },
          error: (error) => {
            toastNotification("danger", error.responseJSON.message);
          },
        });
      });
    </script>
  </body>
</html>
